@model gRide.ViewModels.LoginViewModel;
@{
    ViewData["Title"] = "Log In";
}
@*Forgot password modal*@
<partial name="_ForgotPassword.cshtml"></partial>
<div class="row">
    <div class="col-12 col-md-6 offset-md-3">
        @if(ViewBag.Message != null){
            <div class="alert alert-secondary alert-dismissible" role="alert">
                @ViewBag.Message
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </div>
</div>
<div class="row">
    <div class="col-12 text-center mt-4">
        <h3 class="fw-lighter text-muted">Log In</h3>
    </div>
    <div class="col-10 offset-1 col-sm-8 offset-sm-2 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4 mt-2">
        <div class="bg-light shadow-lg border rounded-3 d-flex justify-content-center">
            <form asp-controller="Account" asp-action="Login" method="post" class="my-4">
                <div class="form-group text-center mb-4">
                    <span class="text-secondary fw-light">Using email address</span>
                </div>
                <div class="form-group mx-4 mb-4">
                    <input asp-for="Email" class="form-control" id="inputEmail" placeholder="Email" />
                    @if (ViewData.ModelState["Email"] != null && ViewData.ModelState["Email"].Errors.Any())
                    {
                        <ul>
                            <li class="text-danger fw-bold">
                                <span asp-validation-for="Email"></span>
                            </li>
                        </ul>
                    }
                </div>
                <div class="input-group">
                    <input asp-for="Password" class="form-control ms-4" id="inputPassword" placeholder="Password" />
                    <button type="submit" class="btn btn-sm btn-outline-secondary me-4">Log In</button>
                </div>
                <div class="form-group mx-4 mb-4">
                    @if (ViewData.ModelState["Password"] != null && ViewData.ModelState["Password"].Errors.Any())
                    {
                        <ul>
                            <li class="text-danger fw-bold">
                                <span asp-validation-for="Password"></span>
                            </li>
                        </ul>
                    }
                </div>
                <div class="form-check form-switch d-flex justify-content-center">
                    <input asp-for="RemeberMe" class="form-check-input" type="checkbox" role="switch">
                    <label asp-for="RemeberMe" class="form-check-label mx-2 fw-light text-secondary">Remember me</label>
                </div>
                <div class="form-group text-center mt-4">
                    <button type="button" class="btn btn-link text-decoration-none" style="outline: none; box-shadow: none;" data-bs-toggle="modal" data-bs-target="#modalCenter">
                        <span class="text-secondary fw-bold">Forgot your password?</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="row my-2">
    <div class="col-10 offset-1 col-sm-8 offset-sm-2 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4 text-center">
        <h5 class="fw-lighter text-muted">or</h5>
    </div>
</div>
<div class="row">
    <div class="col-10 offset-1 col-sm-8 offset-sm-2 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4 mb-xl-4">
        <div class="bg-light shadow-lg border rounded-3 d-flex justify-content-center">
            <form asp-controller="Account" asp-action="ExternalLogin" method="post" class="w-100 my-4">
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary mx-5 mx-lg-4 my-2" name="provider" value="Facebook">
                        <object type="image/svg+xml" data="~/img/svg/facebook.svg" class="align-middle"></object>
                        <span class="align-middle fw-bold">Log in with Facebook</span>
                    </button>
                    <button type="submit" class="btn btn- btn-outline-secondary text-black mx-5 mx-lg-4 my-2" name="provider" value="Google">
                        <object type="image/svg+xml" data="~/img/svg/google.svg" class="align-middle"></object>
                        <span class="align-middle fw-bold">Log in with Google</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        setTimeout(function () {
            $(".alert").fadeOut().empty();
        }, 5000);
    </script>
}