@model gRide.ViewModels.ForgotPasswordViewModel

<div class="modal fade" id="modalCenter" tabindex="-1" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="modal-title text-secondary fw-light" id="exampleModalCenterTitle">Enter your email address below and we'll send you a link with instructions.</p>
                <form asp-controller="Account" asp-action="ForgotPassword" method="post">
                    <div asp-validation-summary="All"></div>
                    <div class="form-group py-2">
                        <input asp-for="Email" class="form-control" id="inputForgotEmail" placeholder="Email" />
                    </div>
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-sm btn-outline-secondary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>