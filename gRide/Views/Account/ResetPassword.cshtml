@model gRide.ViewModels.ResetPasswordViewModel

<h1>Reset password</h1>
<form asp-controller="Account" asp-action="ResetPassword" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group py-2">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" id="inputPassword" />
    </div>
    <div class="form-group py-2">
        <label asp-for="ReTypePassword"></label>
        <input asp-for="ReTypePassword" class="form-control" id="inputPassword" />
    </div>
    <input type="hidden" asp-for="UserId" class="form-control" />
    <input type="hidden" asp-for="Token" class="form-control" />
    <div class="row">
        <div class="col-12 text-end">
            <button type="submit" class="btn btn-primary">Reset</button>
        </div>
    </div>
</form>