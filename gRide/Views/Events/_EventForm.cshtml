@model gRide.ViewModels.NewEventViewModel

<div class="col-10 offset-1 col-md-2 offset-md-3">
    <div class="form-group my-2 my-md-0">
        <input class="form-control" id="nameInput" placeholder="Event name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
</div>
<div class="col-10 offset-1 col-md-2 offset-md-0">
    <div class="form-group my-2 my-md-0">
        <input type="date" id="dateInput" class="form-control">
        <span asp-validation-for="Date" class="text-danger fw-light"></span>
    </div>
</div>
<div class="col-10 offset-1 col-md-2 offset-md-0">
    <div class="form-group my-2 my-md-0">
        <input type="time" id="timeInput" class="form-control">
        <span asp-validation-for="Date" class="text-danger fw-light"></span>
    </div>
</div>
<div asp-validation-summary="ModelOnly" class="col-10 offset-1 col-md-2 offset-md-3 text-danger fw-light"></div>
