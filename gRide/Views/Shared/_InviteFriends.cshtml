@model ICollection<gRide.ViewModels.DisplayUserViewModel>
@foreach (var item in Model)
{
    <div class="row my-3 text-start">
        <div class="col-5 offset-1">
            <img src="@item.ProfilePicture" class="img-fluid img-thumbnail rounded-circle" style="width: auto; height: 64px;" alt="User profile pciture">
            <span class="mx-2">@item.UserName</span>
        </div>
        <div class="col-5 offset-1 text-end">
            <button class="btn btn-sm btn-secondary mx-2" data-friendId="@item.UserId" data-status="pending" onclick="inviteFriend(this)">Invite</button>
        </div>
    </div>
}
